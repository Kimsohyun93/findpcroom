<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_marginBottom="8dp">


    <ImageView
        android:id="@+id/listImageIV"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pcroom_01"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/listFavoriteIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_baseline_favorite_border_24" />

        <ImageView
            android:id="@+id/listShareIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_share_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/listNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bmjua"
        android:lineSpacingExtra="20sp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listImageIV"
        tools:text="홍대 아이콘 피시방" />

    <LinearLayout
        android:id="@+id/listCpuLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listImageIV">

        <ImageView
            android:id="@+id/listCpuCompanyIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/company_amd" />

        <TextView
            android:id="@+id/listCpuNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:gravity="end"
            android:lineSpacingExtra="7.5sp"
            android:textColor="@color/color_warm_gray_9f9f9f"
            android:textSize="10sp"
            android:textStyle="normal"
            tools:text="RYZEN 7 2700X" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.3dp"
        android:layout_marginRight="8dp"
        android:gravity="bottom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listCpuLL">

        <ImageView
            android:id="@+id/listGpuCompanyIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/company_amd" />

        <TextView
            android:id="@+id/listGpuNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:gravity="end"
            android:lineSpacingExtra="7.5sp"
            android:textColor="@color/color_warm_gray_9f9f9f"
            android:textSize="10sp"
            android:textStyle="normal"
            tools:text="RADEON RX 590" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listInfoLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2.7dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listNameTV">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_star_teal_300_18dp" />

        <TextView
            android:id="@+id/listStarTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/bmjua"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="9.3sp"
            android:textColor="@color/color_warm_gray_9f9f9f"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="4.7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="4dp"
            android:src="@drawable/outline_comment_black_18_dp" />

        <TextView
            android:id="@+id/listCommentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/bmjua"
            android:lineSpacingExtra="9.3sp"
            android:textColor="@color/color_warm_gray_9f9f9f"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_payment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:lineSpacingExtra="13.3sp"
            android:textColor="@color/color_warm_gray_9f9f9f"
            android:textSize="8sp"
            android:textStyle="normal"
            tools:text="한시간 1,200 (회원가)" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listLocationLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listInfoLL">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_location_on_red_300_18_dp_2" />

        <TextView
            android:id="@+id/listLocationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/color_warm_gray_9f9f9f"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="서울 마포구 양화로 156  LG펠리스 빌딩 (동교동 165-8)" />
    </LinearLayout>

    <TextView
        android:id="@+id/listDistanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/bmjua"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9sp"
        android:textColor="#adadad"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listLocationLL"
        tools:text="590m" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listFacilityRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listDistanceTV"
        tools:itemCount="3"
        tools:listitem="@layout/list_convinience" />

    <View
        android:id="@+id/eventLineV"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:background="#b7b7b7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listFacilityRV" />

    <LinearLayout
        android:id="@+id/listEventLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventLineV">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="11.3sp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="EVENT 2시간이상 고객 아이스크림 제공 " />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>